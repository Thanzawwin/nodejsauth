<% include ../layout/header %>

    <div class="container">
        <%if(errors){%>
            <%errors.forEach((err)=>{%>
                <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert">&times;</button>
                    <%= err.msg%>
                </div>
            <%})%>
        <%}%>
        <form action="/user/register" method="POST">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" value="<%= body.name%>" name="name" placeholder="Name....">
            </div>
            <div class="form-group">
                <label>UserName</label>
                <input type="text" class="form-control" value="<%= body.username%>" name="username" placeholder="UserName....">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" value="<%= body.email%>" name="email" placeholder="Email....">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password....">
            </div>
            <div class="form-group">
                <label>ConfirmPassword</label>
                <input type="password" class="form-control" name="confirm" placeholder="Confirm....">
            </div>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>




<% include ../layout/footer %>
